<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
        <constant name="struts.devMode" value="true" />
        <package name="SEP" extends="struts-default">
            <action name="hello"
                    class="sep.Action.HelloWorldAction"
                    method="execute">
                <result name="success">/HelloWorld.jsp</result>
            </action>

            <action name="login"
                    class="sep.Action.LoginAction"
                    method="execute">
                <result name="teacher">/TeacherMain.jsp</result>
                <result name="student">/StudentMain.jsp</result>
                <result name="admin">/AdminMain.jsp</result>
                <result name="error">/Error.jsp</result>
                <result name="success">/AdminMain.jsp</result>
            </action>

            <action name="select"
                    class="sep.Action.SelectAction"
                    method="execute">
                <result name="success">/Login.jsp</result>
                <result name="error">/Error.jsp</result>
            </action>
            <action name="check"
                    class="sep.Action.LoginAction"
                    method="check">
                <result name="chk">/Check.jsp</result>
            </action>
        </package>



</struts>